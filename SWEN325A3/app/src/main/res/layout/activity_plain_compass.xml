<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/plain_compass"
        android:layout_width="332dp"
        android:layout_height="352dp"
        android:layout_marginTop="156dp"
        android:contentDescription="@string/photo_of_compass_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/compass_icon" />

    <Button
        android:id="@+id/home_from_plain_compass"
        android:layout_width="306dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:text="@string/return_home"
        app:layout_constraintEnd_toEndOf="@+id/plain_compass"
        app:layout_constraintStart_toStartOf="@+id/plain_compass"
        app:layout_constraintTop_toBottomOf="@+id/plain_compass" />


</androidx.constraintlayout.widget.ConstraintLayout>